<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_grv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="grv" />
    <Button
        android:id="@+id/btn_grv_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="grv_horizontal" />
    <Button
        android:id="@+id/btn_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="grv+head+foot" />
    <Button
        android:id="@+id/btn_refresh_loadmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="grv+refresh+loadmore" />
    <Button
        android:id="@+id/btn_drag_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="grv+drag_selector" />

</LinearLayout>
